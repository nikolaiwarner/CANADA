<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :start_datetime %><br />
    <%= f.text_field :start_datetime, :class => "datepicker" %>
  </p>
  <p>
    <%= f.label :end_datetime %><br />
    <%= f.text_field :end_datetime, :class => "datepicker" %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.collection_select(:location_id, Location.all, :id, :title, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>